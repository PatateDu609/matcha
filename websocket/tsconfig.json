{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist/",
    "esModuleInterop": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": ".",

    "paths": {
      "*": [
        "node_modules/",
        "src/types/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}